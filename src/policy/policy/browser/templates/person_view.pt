<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="policy">
  <body>

    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">

	<div>

	  <div class="imageContainer"
	       tal:define="image nocall:context/image"
	       tal:condition="python:image and image.getSize()">
	      <img tal:define="scale context/@@images|nothing"
		   tal:replace="structure python: scale.scale('image', scale='mini').tag()" />
	  </div>

	  <table class="employeeInformation"
		 summary="Employee information"
		 i18n:attributes="summary summary_employee_information">
        <tbody>

	      <tr class="personJobtitleFunctiontitle" tal:condition="context/jobtitle|nothing">
    		<td colspan="2">
	       	  <span tal:condition="context/jobtitle|nothing" tal:replace="context/jobtitle" />
		    </td>
	      </tr>

	      <tr tal:condition="context/phone|nothing">
		      <th>Telefon:</th>
		      <td tal:content="context/phone">12345678</td>
	      </tr>

	      <tr tal:condition="context/email|nothing">
		      <th>E-mail:</th>
		      <td><a href=""
		       tal:attributes="href string:mailto:${context/email}"
		       tal:content="context/email">test@test.dk</a></td>
	      </tr>

            </tbody>
	  </table>


	  <div class="employeeDataBlock">

	    <div class="employeeData" tal:condition="context/text">
	      <span tal:replace="structure context/text/output" />
	    </div>

	  </div>

	</div>

    </metal:content-core>
    </metal:content-core>

  </body>
</html>
