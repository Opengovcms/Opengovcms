<dl class="portlet portletSSTKontakt"
    tal:define="person view/person;"
    i18n:domain="policy">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/data/title" />
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
	<tal:img tal:define="image nocall:person/image"
		 tal:condition="python:image and image.getSize()">
	  <img src="dummy.png" width="60" height="60" alt="" class="imgLeft"
	       tal:define="scale person/@@images|nothing"
	       tal:replace="structure python: scale.scale('image', scale='mini').tag()" />
	</tal:img>
        <span class="kontaktName"
              tal:content="person/title">Ditte Rejnholdt Rudolfsen</span><br/>
        <span class="kontaktJobTitle"
              tal:content="person/jobtitle">Fuldm√¶gtig</span><br/>
        <span class="kontaktPhone"
              tal:content="string:Telefon: ${person/phone}">72 42 37 00</span>
        <a class="kontaktEmail"
           tal:attributes="href string:mailto:${person/email}"
           tal:content="person/email">info@servicestyrelsen.dk</a>
      <div class="kontaktText"
	   tal:condition="person/text"
           tal:content="structure person/text/output">
        Body text
      </div>
    </dd>
</dl>
