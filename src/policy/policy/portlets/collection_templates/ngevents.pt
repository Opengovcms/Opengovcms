<dl class="portlet NGCollectionPortlet NGEvents"
    i18n:domain="plone"
    tal:define="collection_url view/collection_url;
                plone_view context/@@plone;
                toLocalizedTime nocall:plone_view/toLocalizedTime;
                DateTime python:modules['DateTime'].DateTime;
                getIcon nocall:plone_view/getIcon;">

    <dt class="portletHeader">
        <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more">
            <span tal:content="view/data/header" />
        </a>
    </dt>
    
    <tal:events tal:repeat="obj view/results">
    <dd class="portletItem"
        tal:define="oddrow repeat/obj/odd;
                    item_icon python:getIcon(obj);
                    month_abr python: ['jan', 'feb', 'mar', 'apr', 'maj', 'jun', 'jul', 'aug', 'sep', 'okt', 'nov', 'dec']"
        tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
            <span class="eventItemDetails">
              <span class="eventItemDay"
                    tal:condition="view/data/show_dates"
                    tal:content="python:DateTime(obj.start).dd()">
                  Day
              </span>
              <span class="eventItemMon"
                    tal:condition="view/data/show_dates"
                    tal:content="python:month_abr[DateTime(obj.start).month()-1]">
                  Mon
              </span>
            </span>
            <div class="eventItemContent">
                <div class="eventItemData">
                  <div class="eventItemStart">Start
                        <tal:start condition="view/data/show_dates"
                        tal:content="python:toLocalizedTime(obj.start, time_only=True)">Start</tal:start></div>
                  <div class="eventItemEnd">Slut
                        <tal:end condition="view/data/show_dates"
                        tal:content="python:toLocalizedTime(obj.end, time_only=True)">End</tal:end></div>
                </div>
                <a href="#"
                   class="eventItemTitle"
                   tal:attributes="href obj/getURL;
                                   title obj/Description"
                   tal:content="obj/pretty_title_or_id">Title</a>
            </div>
    </dd>
    </tal:events>
    <dd class="portletFooter" tal:condition="view/data/show_more">
        <span class="portletBottomLeft"></span>
        <span>
        <a tal:attributes="href collection_url"
           tal:content="structure view/show_more_label">
             More&hellip;
             </a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
