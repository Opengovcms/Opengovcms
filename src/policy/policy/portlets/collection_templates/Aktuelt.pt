<dl class="portlet NGCollectionPortlet NGAktuelt"
    i18n:domain="plone"
    tal:define="collection_url view/collection_url;
                plone_view context/@@plone;
                toLocalizedTime nocall:plone_view/toLocalizedTime;
                areavocabulary python:getattr(context.portal_vocabularies,'fagomraader',None);
                getIcon nocall:plone_view/getIcon;">

    <dt class="portletHeader">
        <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more">
            <span tal:content="view/data/header" />
        </a>
    </dt>

    <tal:events tal:repeat="obj view/results">
    <dd class="portletItem"
        tal:define="oddrow repeat/obj/odd;
                    number repeat/obj/number;
                    item_icon python:getIcon(obj);"
        tal:attributes="class python:oddrow and 'portletItem even ngaktueltItem%d'%number or 'portletItem odd ngaktueltItem%d'%number">
      <a href="#"
         class="ngaktuelt-block"
         tal:condition="repeat/obj/start"
         tal:attributes="href obj/getURL;
                         title obj/Description">
            <img tal:define="object obj/getObject" tal:condition="object/getImage" src="dummy.png" width="60" height="60" alt="" class="imgLeft"
                 tal:replace="structure python:object.tag(scale='collage', css_class='ngaktuelt-image')" /></a>
      <div class="ngaktuelt-details">
        <span class="portletItemAtvareas"
              tal:define="atvareas obj/atvareas|nothing"
              tal:condition="atvareas">
          <tal:repeat condition="python: areavocabulary is not None" repeat="atvarea atvareas">
            <tal:atvarea define="areaname python:context.displayValue(areavocabulary.getDisplayList(context), atvarea)"
                         condition="areaname"
                         replace="areaname">Area</tal:atvarea><tal:separator condition="not: repeat/atvarea/end">, </tal:separator>
          </tal:repeat> <span class="ng-separator">|</span>
        </span>
        <span class="portletItemDetails"
              tal:condition="view/data/show_dates"
              tal:content="python:toLocalizedTime(obj.Date)">
            Date
        </span>
      </div>
      <a href="#"
         class="ngaktuelt-title"
         tal:content="obj/pretty_title_or_id"
         tal:attributes="href obj/getURL;
                         title obj/Description">Title</a>
      <div class="ngaktuelt-description"
           tal:content="obj/Description">Description</div>
    </dd>
    </tal:events>
    <dd class="portletFooter" tal:condition="view/data/show_more">
        <span class="portletBottomLeft"></span>
        <span>
        <a tal:attributes="href collection_url"
           tal:content="structure view/show_more_label">
             More&hellip;
             </a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
