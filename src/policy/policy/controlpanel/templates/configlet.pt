<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/prefs_main_template/macros/master"
      i18n:domain="plone">

<body>

  <div metal:fill-slot="top_slot">
            <tal:defines tal:define="dummy python:request.set('disable_border',1);
                                     disable_column_one python:request.set('disable_plone.leftcolumn', 1);
                                     disable_column_two python:request.set('disable_plone.rightcolumn',1);"/>
</div>

<div metal:fill-slot="prefs_configlet_main" tal:define="dummy python:request.set('disable_plone.leftcolumn', 1)">
  <script>
	$(document).ready(function(){
		/*
	    $("tr.widget-table-row").sort(
			function(a, b){ 
				return $("input.int-field", $(a)).val() - $("input.int-field", $(b)).val() ;
		}).each(function (index, value) {
	        $(".multi-widget").append(value);
	    });
		*/
	    $(".multi-widget").sortable({
                        items: "> tr",
			placeholder: "ui-state-highlight", 
			helper:'clone',
			stop: function( event, ui ) {
				var i = 0;
				$("input.int-field").each(function(){
					if (this.id.match(/form-widgets-social_share_items-\d+-widgets-priority/)){
					    $(this).val(i);
					    i++;
					}
				});
			}
		});
    });
  </script>
  
    <a href=""
       id="setup-link"
       tal:attributes="href string:$portal_url/plone_control_panel"
       i18n:translate="">
        Site Setup
    </a>

    <h1 class="documentFirstHeading" tal:content="view/label">View Title</h1>

    <div metal:use-macro="context/global_statusmessage/macros/portal_message">
      Portal status message
    </div>

    <div id="content-core">
        <div id="layout-contents">
            <table width="82%"><tr align="center"><td align="left">Priority</td><td>Url</td><td>Visible</td><td>Icon</td><td>Icon hover</td><td>Danish Alt</td><td>English Alt</td></tr></table>
            <span tal:replace="structure view/contents" />
        </div>
    </div>

</div>
</body>
</html>
